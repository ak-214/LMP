<!DOCTYPE html>
<html>

<head>
  <title>LMS</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= javascript_pack_tag 'application' %>
</head>

<body>
  <div class="container">
    <% if notice %>
    <p class="alert alert-success">
      <%= notice %>
    </p>
    <% end %>
    <% if alert %>
    <p class="alert alert-danger">
      <%= alert %>
    </p>
    <% end %>
  </div>
  <%= yield %>
</body>

</html>